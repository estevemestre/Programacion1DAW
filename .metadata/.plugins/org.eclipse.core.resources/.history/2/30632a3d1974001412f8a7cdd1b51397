
/**
 *  @author: Esteve Mestre Company
 *  
 * Activitat10.- Volem dissenyar un menú semblant al següent:
 * 
 * MENÚ PRINCIPAL
 * ==============
 * 1.-Paraula més llarga.
 * 2.-Paraula més curta.
 * 3.-Número de vocals de les paraules.
 * 0.-Eixir
 * Introduix opció:
 * 
 *  Prèviament a la visualització del menú i únicament una vegada, s'han de demanar 
 *  3 paraules  a l'usuari. A continuació, s'ha de mostrar el menú, fins que l'opció seleccionada siga 0. 
 *  
 *  S'han d'implementar correctament els mètodes per fer el següent:
 *  
 *  Opció1: Ha de mostrar (de les tres paraules demanades a l'usuari) aquella que és més llarga.
 *  Opció2: Ha de mostrar (de les tres paraules demanades a l'usuari) aquella que és més curta.
 *  Opció3: Ha de mostrar el número de vocals (accentuades o no, majúscules o minúscules)
 *   de cada paraula, indicant-ho amb *.
 *   
 *  A continuació es mostra un exemple d'execució del programa:
 *  
 *  Escriu paraula:hola
 *  Escriu paraula:adiós
 *  Escriu paraula:mañana
 *  
 *  MENÚ PRINCIPAL
 *  ==============
 *  1.-Paraula més llarga.
 *  2.-Paraula més curta.
 *  3.-Número de vocals de les paraules.
 *  0.-Eixir
 *  Introduix opció:
 *  
 *  1
 *  La paraula més llarga és: mañana
 *  
 *  
 *  
 *  2
 *  La paraula més curta és: hola
 *  
 *  MENÚ PRINCIPAL
 *  ==============
 *  1.-Paraula més llarga.
 *  2.-Paraula més curta.
 *  3.-Número de vocals de les paraules.
 *  0.-Eixir
 *  Introduix opció:
 *  
 *  3
 *  La paraula hola té **(2) vocals.
 *  La paraula adiós té ***(3) vocals.
 *  La paraula mañana té ***(3) vocals.
 *  
 *  MENÚ PRINCIPAL
 *  ==============
 *  1.-Paraula més llarga.
 *  2.-Paraula més curta.
 *  3.-Número de vocals de les paraules.
 *  0.-Eixir
 *  Introduix opció:
 *  0
 *  Aplicació finalitzada.
 * 
 */

package com.prog.ud6;

import java.util.Scanner;

public class Actividad10 {




		public static void main(String[] args){
			
			Scanner teclado = new Scanner(System.in);
			
			String palabra1;
			
			String palabra2;
			
			String palabra3;
		
			System.out.println("Inserta la primera palabra");
			palabra1 = teclado.nextLine();
			
			
			System.out.println("Inserta la segunda palabra");
			palabra2 = teclado.nextLine();
			
			
			System.out.println("Inserta la tercera palabra");
			palabra3 = teclado.nextLine();
		
		
			palabras(palabra1,palabra2,palabra3);     // LLamo el metodo  i le pasos los paarametros
		
		
		}
	
		
		
			public static void palabras(String palabra1, String palabra2, String palabra3){   // 
				
				Scanner teclado = new Scanner(System.in);
		
				String aux1=palabra1;
				String palab2=palabra2;
				String palab3=palabra3;
				String palab1Asterisc="";
				String palab2Asterisc="";
				String palab3Asterisc="";
				int select=5;
		
		int palab1Cont=0;
		int palab2Cont=0;
		int palab3Cont=0;
		
		while (select!=0){
			
			System.out.println("MENÚ PRINCIPAL");
			System.out.println("==============");
			System.out.println("1.-Paraula més llarga.");
			System.out.println("2.-Paraula més curta.");
			System.out.println("3.-Número de vocals de les paraules.");
			System.out.println("0.-Eixir");
			System.out.println("Introduix opció:");
			select = Integer.parseInt(teclado.nextLine());
			
			if (select==0){
				System.out.println("Adios ;)");
				System.out.println("Aplicación finalizada");
			} else if(select==1){
				if (aux1.length()>palab2.length() && aux1.length()>palab3.length()){
					System.out.println(aux1);
				} else if (palab2.length()>aux1.length() && palab2.length()>palab3.length()){
					System.out.println(palab2);
				} else if (palab3.length()>aux1.length() && palab3.length()>palab2.length()){
					System.out.println(palab3);
				} else if (aux1.length()==palab2.length() && aux1.length()>palab3.length()){
					System.out.println(aux1+" y "+palab2);
				} else if (aux1.length()==palab3.length() && aux1.length()>palab2.length()){
					System.out.println(aux1+" y "+palab3);
				} else if (aux1.length()==palab3.length() && aux1.length()==palab3.length()){
					System.out.println(aux1+", "+palab2+" y "+palab3);
				} else {
					System.out.println(palab2+" y "+palab3);
				}
			} else if(select==2){
				if (aux1.length()<palab2.length() && aux1.length()<palab3.length()){
					System.out.println(aux1);
				} else if (palab2.length()<aux1.length() && palab2.length()<palab3.length()){
					System.out.println(palab2);
				} else if (palab3.length()<aux1.length() && palab3.length()<palab2.length()){
					System.out.println(palab3);
				} else if (aux1.length()==palab2.length() && aux1.length()<palab3.length()){
					System.out.println(aux1+" y "+palab2);
				} else if (aux1.length()==palab3.length() && aux1.length()<palab2.length()){
					System.out.println(aux1+" y "+palab3);
				} else if (aux1.length()==palab3.length() && aux1.length()==palab3.length()){
					System.out.println(aux1+", "+palab2+" y "+palab3);
				} else {
					System.out.println(palab2+" y "+palab3);
				}
			} else if (select==3){
				

				for (int i= 0; i<aux1.length();i++){
					if(aux1.charAt(i)==('a')||aux1.charAt(i)==('e')||aux1.charAt(i)==('i')||aux1.charAt(i)==('o')||aux1.charAt(i)==('u')){
						palab1Cont++;
						palab1Asterisc=palab1Asterisc+"*";
					}
				}
				for (int i= 0; i<palab2.length();i++){
					if(palab2.charAt(i)==('a')||palab2.charAt(i)==('e')||palab2.charAt(i)==('i')||palab2.charAt(i)==('o')||palab2.charAt(i)==('u')){
						palab2Cont++;
						palab2Asterisc=palab2Asterisc+"*";
					}
				}
				for (int i= 0; i<palab3.length();i++){
					if(palab3.charAt(i)==('a')||palab3.charAt(i)==('e')||palab3.charAt(i)==('i')||palab3.charAt(i)==('o')||palab3.charAt(i)==('u')){
						palab3Cont++;
						palab3Asterisc=palab3Asterisc+"*";
					}
				}
				
				System.out.println(palab1Cont);
				//La paraula hola té **(2) vocals.
				System.out.println("La palabra "+aux1+" tiene "+palab1Asterisc+"("+palab1Cont+")"+" vocales");
				System.out.println("La palabra "+palab2+" tiene "+palab2Asterisc+"("+palab2Cont+")"+" vocales");
				System.out.println("La palabra "+palab3+" tiene "+palab3Asterisc+"("+palab3Cont+")"+" vocales");
			}
		}
		teclado.close();
	}
}
